<div class="jumbotron">
<h1>My Activities (<%= @activities.count %>)</h1>
<% @activities.each do |activity| %>
  <div class="activity">
  <% if activity.owner %>
  <%= link_to (image_tag activity.owner.avatar(:mini)), activity.owner %>
    <%= link_to activity.owner.full_name, activity.owner %>
    <% end %>
    <%= render_activity activity %>
    <span class="timestamp">
     <%= local_time_ago activity.created_at %>
  </span>
  </div>
<% end %>

<div class="center">
   <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
</div>
</div>