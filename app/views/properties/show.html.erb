      <div class="panel-heading center">
      <h2><%= @property.title %></h2><p class="lead"> in <%= @property.city %>, <%= @property.state %> (<%= @property.country %>)</p>
      </div>
      <div class="panel-body">
        <p><%= @property.description_long %></p>
        <% if @property.user %>
        <div class="pin-user">
          <div class="pin-user-image">
            <%#= link_to image_tag(@property.user.avatar).to_s, @property.user %>
            <%= link_to @property.user.avatar.url do %>
              <%= image_tag @property.user.avatar.url, class: "thumbnail" %>
            <% end %>
          </div> 
          <strong>
            <%= link_to @property.user.username, @property.user %>
          </strong>
        </div>
        <% end %>
        </div>
        <div class="panel-footer">
        <div class="pledge_count">
          <i># Pledge count will go here, with progress bar.</i>
        </div>
        <div class="vote_count">
        # vote count goes here
        </div> 
        <% if user_signed_in? %>
        <div class="votes">
        # votes go here
        </div>
        <% end %>
        <% if current_user && @property.user == current_user %>
         <%= link_to edit_property_path(@property) do %>
           <span class="glyphicon glyphicon-edit"></span>
             Edit
          <% end %>
          <%= link_to @property, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>