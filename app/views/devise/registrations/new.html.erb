<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Sign up</h1>
  </div>

  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-group col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, placeholder: 'John', class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: 'Doe', class: "form-control" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: 'jdoe', class: "form-control" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'jdoe@example.com', class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password %>
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: 'Password', autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.button "Sign up", class: "btn btn-primary btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating user..."} %>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>